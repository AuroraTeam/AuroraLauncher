{
    "name": "@aurora-launcher/server",
    "version": "0.0.5-dev",
    "description": "LauncherServer for AuroraLauncher",
    "keywords": [
        "minecraft",
        "launcher"
    ],
    "homepage": "https://aurora-launcher.ru",
    "bugs": {
        "url": "https://github.com/AuroraTeam/AuroraLauncher/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/AuroraLauncher.git"
    },
    "license": "MIT",
    "author": "AuroraTeam",
    "contributors": [
        "JoCat (https://github.com/JoCat)",
        "LoomeL (https://github.com/LoomeL)",
        "FIXxp (https://github.com/FIXxp)",
        "IsTopNick (https://github.com/IsTopNick)"
    ],
    "main": "dist/LauncherServer.js",
    "scripts": {
        "dev": "node scripts/dev.mjs",
        "build:dev": "node scripts/build.mjs",
        "build:prod": "node scripts/build.mjs --prod",
        "build:bin": "pkg dist/LauncherServer.js -t node20-linux-x64,node20-macos-x64,node20-win-x64 --out-path dist --compress GZip",
        "clean": "rimraf dist",
        "prettier": "prettier --write src",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "start": "node ."
    },
    "devDependencies": {
        "@aurora-launcher/esbuild-decorators": "^0.0.1",
        "@types/adm-zip": "^0.5.5",
        "@types/cli-progress": "^3.11.5",
        "@types/hjson": "^2.4.6",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^20.11.24",
        "@types/prompts": "^2.4.9",
        "@types/semver": "^7.5.8",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@yao-pkg/pkg": "^5.11.4",
        "concurrently": "^9.0.1",
        "esbuild": "^0.24.0",
        "eslint": "^8.56.0",
        "eslint-plugin-node": "^11.1.0",
        "import-sort-style-module": "^6.0.0",
        "minimist": "^1.2.8",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "prettier-plugin-import-sort": "0.0.7",
        "rimraf": "^6.0.1",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@aurora-launcher/core": "^0.23.0",
        "aurora-rpc-server": "^0.1.5",
        "chalk": "^5.3.0",
        "chokidar": "^4.0.1",
        "class-transformer": "^0.5.1",
        "cli-progress": "^3.12.0",
        "commander": "^12.1.0",
        "fast-querystring": "^1.1.2",
        "hash-wasm": "^4.11.0",
        "hjson": "^3.2.2",
        "lodash-es": "^4.17.21",
        "mssql": "^11.0.1",
        "mysql2": "^3.9.2",
        "oracledb": "^6.3.0",
        "pg": "^8.11.3",
        "prompts": "^2.4.2",
        "raw-body": "^3.0.0",
        "reflect-metadata": "^0.2.1",
        "semver": "^7.6.0",
        "source-map-support": "^0.5.21",
        "sqlite3": "^5.1.7",
        "strip-ansi": "^7.1.0",
        "typedi": "^0.10.0",
        "typeorm": "^0.3.20",
        "uuid": "^10.0.0"
    },
    "importSort": {
        ".js, .mjs, .ts": {
            "style": "module",
            "parser": "typescript"
        }
    }
}
